{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A line chart showing the monthly average temperature.",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 300,
  "title": {
    "text": "Monthly Average Temperature",
    "fontSize": 20,
    "font": "Helvetica Neue",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Iwyn-j/FIT3179/main/GlobalWeatherRepository.csv",
      "format": {
        "type": "csv",
        "parse": {"last_updated": "date"},
        "delimiter": ","
      },
      "transform": [
        {
          "field": "last_updated",
          "type": "timeunit",
          "units": ["month"],
          "as": ["month", "month_end"]
        },
        {
          "type": "aggregate",
          "groupby": ["month"],
          "ops": ["mean"],
          "fields": ["temperature_celsius"],
          "as": ["avg_temp"]
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "line",
      "style": ["line"],
      "sort": {"field": "datum[\"month\"]"},
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "stroke": {"value": "#4c78a8"},
          "description": {
            "signal": "\"month: \" + (isValid(datum[\"month\"]) ? datum[\"month\"] : \"\"+datum[\"month\"]) + \"; avg_temp: \" + (format(datum[\"avg_temp\"], \"\"))"
          },
          "x": {"scale": "x", "field": "month"},
          "y": {"scale": "y", "field": "avg_temp"},
          "defined": {
            "signal": "isValid(datum[\"avg_temp\"]) && isFinite(+datum[\"avg_temp\"])"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {"data": "source_0", "field": "month", "sort": true},
      "range": [0, {"signal": "width"}],
      "padding": 0.5
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "avg_temp"},
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Month",
      "titleFont": "Helvetica Neue",
      "titleFontSize": 18,
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Average Temperature (Â°C)",
      "titleFont": "Helvetica Neue",
      "titleFontSize": 18,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "config": {}
}